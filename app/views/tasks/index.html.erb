<h1><strong>My tasks</strong></h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %> <%= link_to "Delete",
      delete_task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %></li>
  <% end %>
</ul>

<%= link_to "+ Add a new task", new_task_path%>
